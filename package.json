{
  "name": "lim-juyeong-portfolio",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "node -e \"const fs=require('fs');['.next','.next-dev','.next-build'].forEach((d)=>fs.rmSync(d,{recursive:true,force:true})); console.log('Cleaned Next caches: .next, .next-dev, .next-build');\"",
    "dev": "cross-env NEXT_DIST_DIR=.next-dev NEXT_DISABLE_WEBPACK_CACHE=1 next dev --hostname 0.0.0.0 --port 3000",
    "dev:reset": "npm run clean && npm run dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "framer-motion": "^11.11.11",
    "lucide-react": "^0.462.0",
    "next": "^15.5.12",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "cross-env": "^10.1.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3"
  }
}
